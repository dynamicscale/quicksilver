<% include header.ejs %>
<% include innerheader.ejs %>

<div style='margin:10px auto; width:1210px;  padding:0px 0px 30px 0px; min-height:1000px;'>
    
    <div style='padding:0 10px;'>
        <div style=' padding:0px 0 15px 0; margin-top:30px; border-bottom:1px solid #eee;'>
            <h1 style='padding-top:10px;'>Edit Channel Info</h1>
            <div class='clr'></div>
        </div>
    
        <form method='POST' action='/saveChannelSettings' id='saveChannelForm'>
            
            <div style='margin-top:40px;'>    
                <div style='float:left; width:300px; text-align: right; font-size:16px; color:#444; padding-top:10px;'>Channel Name:</div>
                <div style='float:left; margin-left: 30px;'>
                    <input type='text' name='channel_name' value='<%= channelData.info.name %>' id='channel_name' class='inputboxlarge' />
                </div>
                <div class='clr' style="margin-top:30px;"></div>
                
                <div style='float:left; width:300px; text-align: right; font-size:16px; color:#444; padding-top:10px;'>Description:</div>
                <div style='float:left; margin-left: 30px;'>
                    <input type='text' name='channel_desc' value='<%= channelData.info.desc %>' class='inputboxlarge' />
                </div>
                <div class='clr' style="margin-top:30px;"></div>
                
                <div style='float:left; width:300px; text-align: right; font-size:16px; color:#444; padding-top:10px;'>Client Name:</div>
                <div style='float:left; margin-left: 30px;'>
                    <input type='text' name='client_name' value='<%= selectedClient.name %>' class='inputboxlarge' />
                </div>
                <div class='clr' style="margin-top:30px;"></div>
                
                <div style='float:left; width:300px; text-align: right; font-size:18px; color:#444; padding-top:10px;'>&nbsp;</div>
                <div style='float:left; margin-left: 30px;'>
                    <a href='#' onclick="document.getElementById('saveChannelForm').submit();" class='zbutton zsmall zwhite'>Submit</a>
                </div>
                <div class='clr' style="margin-top:30px;"></div>
            </div>    
        <input type='hidden' name='channelId' value='<%= channelId %>' />
        <input type='hidden' name='clientId' value='<%= selectedClient.id %>' />
        </form>
    </div>
</div>    

<% include footer.ejs %>