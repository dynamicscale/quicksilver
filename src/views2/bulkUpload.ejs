<% include header.ejs %>

<div class='topbar'>
    <div style='margin:0 auto; width:1200px;'>
        <!--a href='/' class='logolink'><img src='images/logoicon.png' height='30' /></a-->
        <% if (typeof(selectedClient) != 'undefined') { %>
            <div style='float:left;'>
                <div class='clientmenu'><%= selectedClient.name %>:  <%= channelData.info.name %></div>
            </div>
        <% } %>    
    </div>    
</div>

<div class='vlinkbox'>
    <!--div style='margin:0 auto; width:1200px; padding:13px 0 23px 0;'>
        <h3 style='color:#333;'><span style='color:#777; font-weight:normal; display:none;'>Channel:</span><%= channelData.info.name %></h3>
        <div class='clr'></div>
    </div-->
        
    <ul class='vlink'>
        <li><a href='/channel?id=<%= channelId %>'>Dashboard</a></li>
        <li><a href='/bulkUploads?id=<%= channelId %>'  class='active'>Bulk Uploads</a></li>
        <li><a href=''>Settings</a></li>
        <li><a href=''>Test APIs</a></li>
        <div class='clr'></div>
    </ul>
</div>

<div style='margin:0 auto; width:1210px;  padding:0px 0px 30px 0px; min-height:1000px;'>
    
    <div style='padding:0 10px;'>
        <div style='border-bottom:1px solid #eee; padding:0px 0 15px 0; margin-top:30px;'>
            <div style='margin-top:8px; float:left;'>
                <h1>Upload Data</h1>
            </div>
            
            <div class='clr'></div>
        </div>
        
    <form method='POST' action='/saveBulkUpload' id='bulkUploadForm' enctype="multipart/form-data">
    <div style='margin-top:50px;'>
        <div style='float:left; width:300px; text-align: right; font-size:18px; color:#444; padding-top:8px;'>Data File:</div>
        <div style='float:left; margin-left: 30px;'>
            <input type='file' name='bulk_upload_data_file' class='inputboxlarge' style='border:1px solid #eee;' />
        </div>
        <div class='clr' style="margin-top:30px;"></div>
        
        <div style='float:left; width:300px; text-align: right; font-size:18px; color:#444; padding-top:8px;'>About:</div>
        <div style='float:left; margin-left: 30px;'>
            <input type='text' name='bulkupload_desc' class='inputboxlarge' />
        </div>
        <div class='clr' style="margin-top:30px;"></div>
        
        <div style='float:left; width:300px; text-align: right; font-size:18px; color:#444; padding-top:10px;'>&nbsp;</div>
        <div style='float:left; margin-left: 30px;'>
            <a href='#' onclick="document.getElementById('bulkUploadForm').submit();" class='zbutton zsmall zwhite'>Submit</a>
        </div>
        <div style='float:left; margin-left: 30px; margin-top:8px;'>
            <a href='/bulkUploads?id=<%= channelId %>'>Cancel</a>
        </div>
        <div class='clr'></div>
        <input type='hidden' name='channelId' value='<%= channelId %>' />
        <input type='hidden' name='clientId' value='<%= channelData.info.client %>' />
    </div>
    </form>
    </div>
</div>

