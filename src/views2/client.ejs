<% include header.ejs %>

<div class='midbar'>
    <div style='margin:0 auto; width:1200px;'>
        <div style="padding:11px 0 15px 0; border-bottom:0px solid #ddd;">
            <h3 style='float:left; margin-top:5px;'><%= clientData.info.name %>
            </h3>
            
            <div class='clr'></div>
        </div>
    </div>
</div>

<div style='margin:20px auto; width:1160px;  background:#fff; padding:20px 30px 30px 30px; min-height:1000px;'>
    <div style='border-bottom:2px solid #bde6e8; padding:0px 0 20px 0;'>
    <div style='margin-top:8px; float:left;'>
        <h1>Channels</h1>
    </div>
    <div style='float:right; border: 0px solid #ddd; padding-top:0px;'>
        <a href='/addChannel?client=<%= clientId %>' class='button_example'>Add New Channel</a>
    </div>
    <div class='clr'></div>
    </div>
    
    <div style='margin-top:35px;'>
    <ul>
    <% if(typeof(channels) != 'undefined') { %>   
    <% var i = 0; numChannels = channels.length; %>
    <% channels.forEach(function(channelData) {
        channelId = channelData[0];
        channel = channelData[2].info;
        if (typeof(channel.name) != 'undefined' && channel.name) {
    %>
        <li style='<% if (i%2 == 1) { %> padding-left:0px; <% } %> <% if (i >= numChannels-1) { %> border-bottom:none; <% } %>'>
            <a href='/channel?id=<%= channelId %>'><%= channel.name %></a>
            <div style='margin-top:8px; color:#555; font-size:15px;'><%= channel.desc %></div>
            <% if (typeof(channel.created) != 'undefined') { %>
            <div style='margin-top:12px; color:#777; font-size:12px; font-style: italic;'>Created on <%= channel.created %></div>
            <% } %>
        </li>
        <% if (i%2 == 1) { %>
            <div class='clr'></div>
        <% } %>
        
        <% i++; %>
    <% } }); } %>
    </ul>
    </div>
</div>

<% include footer.ejs %>