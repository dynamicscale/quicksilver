<% include header.ejs %>
<div class='midbar'>
    <div style='margin:0 auto; width:1200px;'>
        <div style="padding:11px 0 15px 0; border-bottom:0px solid #ddd;">
            <h3 style='float:left; margin-top:5px;'>Dashboard
            </h3>
            
            <div class='clr'></div>
        </div>
    </div>
</div>

<div style='margin:20px auto; width:1160px;  background:#fff; padding:20px 30px 30px 30px; min-height:1000px;'>
    <div style='border-bottom:2px solid #bde6e8; padding:0px 0 20px 0;'>
    <div style='margin-top:8px; float:left;'>
        <h1>Add New Client</h1>
    </div>
    
    <div class='clr'></div>
    </div>
    <form method='POST' action='/saveClient' id='addClientForm'>
    <div style='margin-top:60px;'>
        <div style='float:left; width:300px; text-align: right; font-size:18px; color:#444; padding-top:8px;'>Client Name:</div>
        <div style='float:left; margin-left: 30px;'>
            <input type='text' name='client_name' class='inputboxlarge' />
        </div>
        <div class='clr' style="margin-top:30px;"></div>
        
        <div style='float:left; width:300px; text-align: right; font-size:18px; color:#444; padding-top:8px;'>About:</div>
        <div style='float:left; margin-left: 30px;'>
            <input type='text' name='client_desc' class='inputboxlarge' />
        </div>
        <div class='clr' style="margin-top:30px;"></div>
        
        <div style='float:left; width:300px; text-align: right; font-size:18px; color:#444; padding-top:10px;'>&nbsp;</div>
        <div style='float:left; margin-left: 30px;'>
            <a href='#' onclick="document.getElementById('addClientForm').submit();" class='zbutton zsmall zwhite'>Submit</a>
        </div>
        <div style='float:left; margin-left: 30px; margin-top:8px;'>
            <a href='/'>Cancel</a>
        </div>
        <div class='clr'></div>
        
    </div>
</div>
</form>
